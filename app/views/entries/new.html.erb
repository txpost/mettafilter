<h1>New entry</h1>

<% form_for(@entry) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :class => 'mceEditor' %>
  </p>
  <p>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list, :size => 80 %>
  <p>
    <%= f.submit 'Create' %>
  </p>
  
  <%= f.hidden_field :created_by, :value => session[:user_name] %>
  
<% end %>

<%= link_to 'Back', entries_path %>
