<h2>Add the following post to your favorites?</h2>

<%= sanitize_html(@entry.body) %>
<br /><br />

<% form_for(@favorite) do |f| %>
  <%= f.error_messages %>
  
  <%= f.submit 'Yep, add to favorites!' %>
  
  <%= f.hidden_field :entry_id, :value => params[:entry] %>
  <%= f.hidden_field :user_id, :value => params[:user] %>
  
<% end %>
