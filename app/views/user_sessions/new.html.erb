<h2>Login</h2>
<div class="entry_container">
  <% form_for @user_session do |f| %>
    <%= f.error_messages %>
    <table>
      <tr>
        <td class="form_label"><%= f.label :login, "username" %></td>
        <td><%= f.text_field :login %></td>
      <tr>
      <tr>
        <td class="form_label"><%= f.label :password, "password" %></td>
        <td><%= f.password_field :password %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "get in there" %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= link_to 'forgot your password?', new_password_reset_path  %></td>
      </tr>
    </table>
  <% end %>
</div>
