<h2>Signup</h2>
<div class="entry_container">

  <% form_for(@user) do |f| %>
    <%= f.error_messages %>
    <table>
      <tr>
        <td class="form_label"><%= f.label :login, "user name" %></td>
        <td><%= f.text_field :login, :size => 40 %></td>
      </tr>
      <tr>
        <td class="form_label"><%= f.label :email, "email" %></td>
        <td><%= f.text_field :email, :size => 40 %></td>
      </tr>
      <tr>
        <td class="form_label"><%= f.label :password, 'password' %></td>
        <td><%= f.password_field :password, :size => 40 %></td>
      </tr>
      <tr>
        <td class="form_label"><%= f.label :password_confirmation, 'confirm password' %></td>
        <td><%= f.password_field :password_confirmation, :size => 40 %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit 'create', :class => "submit" %> </td>
    </table>
  <% end %>
</div>
